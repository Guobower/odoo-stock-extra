<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock_picking_wizard_form" model="ir.ui.view">
            <field name="name">stock.picking.wizard.form</field>
            <field name="model">stock.picking.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Get First Available Picking">
                    <group>
                        <field name="picking_type_id"/>
                        <field name="employee_id"/>
                    </group>
                    <footer>
                        <button name="get_first_available_picking" string="Get" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="stock_picking_wizard_form_act" model="ir.actions.act_window">
            <field name="name">Get First Available Picking</field>
            <field name="res_model">stock.picking.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'active_test': False}</field>
        </record>

        <menuitem id="stock_picking_wizard_form_menu"
            action="stock_picking_wizard_form_act"
            parent="stock.menu_stock_warehouse_mgmt" />

    </data>
</openerp>
